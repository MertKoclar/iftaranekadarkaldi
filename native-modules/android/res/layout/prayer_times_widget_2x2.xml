<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="@drawable/widget_background_compact"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

    <!-- Compact Location -->
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konum"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:alpha="0.85"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <!-- Compact Countdown Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/widget_countdown_background_compact"
        android:padding="14dp"
        android:layout_marginBottom="10dp">
        
        <TextView
            android:id="@+id/next_prayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ä°ftar"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:alpha="0.95"
            android:layout_marginBottom="6dp"/>
        
        <TextView
            android:id="@+id/countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.08"/>
    </LinearLayout>

    <!-- Compact Next Prayer Time -->
    <TextView
        android:id="@+id/next_prayer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:30"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:alpha="0.8"
        android:textStyle="normal"/>

</LinearLayout>

